<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.beva.bornmeme.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
<!--doesn't have to set arguments, when the navigation done
the current fragment will call the user data to render the view
        <argument-->
<!--            android:name="photoKey"-->
<!--            app:argType="android.graphics.Bitmap"-->
<!--            app:nullable="true" />-->
    </fragment>

    <dialog
        android:id="@+id/dialogPreview"
        android:name="com.beva.bornmeme.ui.gallery.PreviewDialog"
        android:label=" "
        tools:layout="@layout/dialog_preview">
    <argument
        android:name="bitmap"
        app:argType="android.graphics.Bitmap" />
    </dialog>

    <fragment
        android:id="@+id/fragmentEditFixmode"
        android:name="com.beva.bornmeme.ui.editFragment.EditFragment"
        android:label="@string/menu_edit"
        tools:layout="@layout/fragment_edit_fixmode" >

        <argument
            android:name="uri"
            app:argType="android.net.Uri" />
    </fragment>

    <action android:id="@+id/navigate_to_edit_fragment" app:destination="@id/fragmentEditFixmode"/>
    <action android:id="@+id/navigate_to_preview_dialog" app:destination="@id/dialogPreview"/>
    <action android:id="@+id/navigate_to_home_fragment" app:destination="@id/nav_home"
        app:popUpTo="@id/mobile_navigation"
        app:popUpToInclusive="true"/>

</navigation>