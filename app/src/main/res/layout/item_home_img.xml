<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layout_gravity="center_horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/home_img_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0px"
        app:cardUseCompatPadding="false"
        android:background="@color/dark_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_tiffany"
            >

            <ImageView
                android:id="@+id/home_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dino"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/user_img"/>

            <ImageView
                android:id="@+id/user_img"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_baseline_tag_faces_24"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="@id/home_img"
                app:layout_constraintTop_toBottomOf="@+id/home_img"
                app:layout_constraintBottom_toTopOf="@+id/like_btn"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/user_img"
                app:layout_constraintTop_toBottomOf="@+id/home_img"
                tools:text="Beva Lin" />

            <ImageView
                android:id="@+id/like_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_baseline_thumb_up_24"
                app:layout_constraintEnd_toEndOf="@+id/user_img"
                app:layout_constraintStart_toStartOf="@+id/user_img"
                app:layout_constraintTop_toBottomOf="@+id/user_img"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/like_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/like_btn"
                app:layout_constraintEnd_toEndOf="@+id/user_name"
                app:layout_constraintStart_toStartOf="@+id/user_name"
                app:layout_constraintTop_toBottomOf="@id/user_name"
                tools:text="1000" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>