<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/drag_preview_btn"
        style="@style/eng_bold_font_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/preview_btn"
        android:textColor="@color/tr_pink"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drag_publish_btn"
        style="@style/eng_bold_font_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/publish_btn"
        android:textColor="@color/tr_pink"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/vertical_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drag_preview_btn">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <HorizontalScrollView
                android:id="@+id/horizontal_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_awkward_look_monkey_puppet"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_awkward_look_monkey_puppet" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_baby_yoda_drinking_soup"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_baby_yoda_drinking_soup" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_cat_being_yelled_at"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_cat_being_yelled_at" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_crying_cat"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_crying_cat" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_crying_kim_kardashian"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_crying_kim_kardashian" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_crying_michael_jordan"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_crying_michael_jordan" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_doge_dog"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_doge_dog" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_facepalm"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
