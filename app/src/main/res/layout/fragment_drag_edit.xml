                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_forever_alone"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_forever_alone" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_girl"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_girl" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_funny_faces"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_funny_faces" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_happy_derpina"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_happy_derpina" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_me_gusta"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_me_gusta" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_rage_face"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_rage_face" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_transparent"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_transparent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_troll_face"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_troll_face" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/meme_vector"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/meme_vector" />


                </LinearLayout>
            </HorizontalScrollView>

            <ImageButton
                android:id="@+id/add_text_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginVertical="2dp"
                android:background="@color/woo"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/add_new"
                app:layout_constraintStart_toEndOf="@+id/drag_gl"
                app:layout_constraintEnd_toStartOf="@+id/clear_button"
                app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll"
                app:tint="@color/tr_pink" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_text_box"
                style="@style/zh_bold_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/tr_black"
                android:cursorVisible="false"
                android:focusableInTouchMode="true"
                android:hint="@string/text_click"
                android:padding="4dp"
                android:singleLine="true"
                android:textColor="@color/gray_white"
                android:textColorHint="@color/dark_gray"
                android:textCursorDrawable="@null"
                android:textSize="24sp"
                android:maxLines="1"
                android:maxLength="12"
                app:layout_constraintBottom_toTopOf="@id/sticker_view"
                app:layout_constraintEnd_toStartOf="@+id/drag_gl"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll" />

            <ImageButton
                android:id="@+id/clear_button"
                android:layout_width="48dp"
                android:layout_height="0dp"
                android:background="@color/woo"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/delete"
                app:layout_constraintBottom_toBottomOf="@id/add_text_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/add_text_btn"
                app:layout_constraintStart_toEndOf="@+id/add_text_btn"
                app:tint="@color/tr_pink" />

            <com.beva.bornmeme.ui.edit_fragment.StickerView
                android:id="@+id/sticker_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/drag_title_card"
                app:layout_constraintTop_toBottomOf="@+id/add_text_btn" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/drag_title_card"
                style="@style/zh_medium_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tr_pink"
                android:hint="@string/enter_title_hint"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/tr_black"
                android:textColorHint="@color/dark_gray"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/drag_text_catalog"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sticker_view" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/drag_text_catalog"
                style="@style/zh_medium_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tr_pink"
                android:hint="@string/enter_tag_hint"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/tr_black"
                android:textColorHint="@color/dark_gray"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/drag_gl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_publish_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_speed="1.6" />

</androidx.constraintlayout.widget.ConstraintLayout>