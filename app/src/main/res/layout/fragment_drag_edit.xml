<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/drag_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dino"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:editable="false"
        android:id="@+id/drag_edit_text"
        android:background="@color/dark_gray"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="DRAG MEEE"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/light_blue"
        app:layout_constraintStart_toStartOf="@+id/drag_img"
        app:layout_constraintTop_toTopOf="@+id/drag_img" />

    <ImageView
        android:id="@+id/sticker_img"
        android:layout_width="50dp"
        android:layout_height="50sp"
        android:visibility="gone"
        android:background="@drawable/heart"
        app:layout_constraintEnd_toEndOf="@+id/drag_img"
        app:layout_constraintBottom_toBottomOf="@+id/drag_img"
        />

</androidx.constraintlayout.widget.ConstraintLayout>