    <com.beva.bornmeme.ui.editFragment.StickerView
        android:id="@+id/sticker_view"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal_scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_text_btn"
        android:layout_height="wrap_content"
        android:text="Add Text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sticker_view"
        android:layout_width="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_box"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/translucent_80"
        android:paddingHorizontal="16dp"
        android:singleLine="true"
        android:textColorHint="@color/thick_pink"
        android:inputType="textUri|textNoSuggestions"
        android:textColor="@color/light_orange_pink"
        app:layout_constraintBottom_toBottomOf="@+id/add_text_btn"
        app:layout_constraintStart_toEndOf="@+id/add_text_btn"
        app:layout_constraintTop_toTopOf="@+id/add_text_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>