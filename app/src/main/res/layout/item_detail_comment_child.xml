<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/child_card"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:elevation="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/comment_guideline"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/child_user_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circle"
                app:srcCompat="@drawable/dino" />

            <TextView
                android:id="@+id/child_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Mindy"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toTopOf="@id/child_zone_text"
                app:layout_constraintStart_toEndOf="@+id/child_user_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/child_user_img" />

            <TextView
                android:id="@+id/child_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 min ago"
                android:layout_marginVertical="8dp"
                app:layout_constraintEnd_toStartOf="@id/child_like_btn"
                app:layout_constraintStart_toStartOf="@+id/child_zone_text"
                app:layout_constraintTop_toBottomOf="@+id/child_zone_text"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:id="@+id/child_zone_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/child_user_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/child_user_img"
                app:layout_constraintTop_toBottomOf="@id/child_user_name" />

            <ImageButton
                android:id="@+id/child_like_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/whit_alpha"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_baseline_thumb_up_off_alt_24"
                app:layout_constraintStart_toEndOf="@+id/child_time"
                app:layout_constraintTop_toTopOf="@id/child_time"
                app:layout_constraintBottom_toBottomOf="@id/child_time"/>

            <TextView
                android:id="@+id/child_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/child_like_btn"
                app:layout_constraintStart_toEndOf="@id/child_like_btn"
                app:layout_constraintTop_toTopOf="@+id/child_like_btn" />

            <ImageButton
                android:id="@+id/child_dislike_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/whit_alpha"
                android:src="@drawable/ic_baseline_thumb_down_off_alt_24"
                app:layout_constraintBottom_toBottomOf="@id/child_like_num"
                app:layout_constraintStart_toEndOf="@+id/child_like_num"
                app:layout_constraintTop_toTopOf="@+id/child_like_num" />

            <TextView
                android:id="@+id/child_dislike_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/child_dislike_btn"
                app:layout_constraintStart_toEndOf="@+id/child_dislike_btn"
                app:layout_constraintTop_toTopOf="@+id/child_dislike_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/comment_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

</androidx.constraintlayout.widget.ConstraintLayout>