<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".ui.editFragment.EditFragment">
<!--    android:background="@color/material_dynamic_neutral70"    -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:layout_marginBottom="6dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/catalog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
        <TextView
            android:id="@+id/catalog"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="CATALOG"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@id/photo_area"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"/>

        <EditText
            android:id="@+id/edit_text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:hint="Please Enter the Title of Image"
            android:paddingHorizontal="8dp"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="@+id/edit_text_catalog"
            app:layout_constraintStart_toStartOf="@+id/edit_text_catalog"
            app:layout_constraintTop_toTopOf="@id/title" />

        <EditText
            android:id="@+id/edit_text_catalog"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:hint="Enter the tag of the image"
            android:cursorVisible="false"
            app:layout_constraintBottom_toBottomOf="@+id/catalog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/catalog"
            app:layout_constraintTop_toTopOf="@id/catalog" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/photo_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            app:layout_constraintTop_toBottomOf="@id/catalog"
            app:layout_constraintBottom_toTopOf="@+id/preview_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:id="@+id/origin_photo"
                android:background="@color/teal_200"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars">

            </ImageView>

            <EditText
                android:id="@+id/bottom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/text_click"
                android:inputType="text"
                android:maxLines="1"
                android:padding="4dp"
                android:textColor="@color/purple_200"
                android:textStyle="bold"
                android:cursorVisible="false"
                app:layout_constraintBottom_toBottomOf="@+id/origin_photo"
                app:layout_constraintEnd_toEndOf="@+id/origin_photo"
                app:layout_constraintStart_toStartOf="@+id/origin_photo"/>

            <EditText
                android:id="@+id/upper_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="Click to add some text"
                android:background="@null"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/text_click"
                android:inputType="text"
                android:maxLines="1"
                android:padding="4dp"
                android:textColor="@color/rice"
                android:textStyle="bold"
                android:cursorVisible="false"
                app:layout_constraintEnd_toEndOf="@+id/origin_photo"
                app:layout_constraintStart_toStartOf="@+id/origin_photo"
                app:layout_constraintTop_toTopOf="@+id/origin_photo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--    adding icon in edittext area
                android:layout_alignParentRight="true"
                android:drawableRight="@android:drawable/ic_menu_search"     -->


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/preview_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:background="@color/light_orange_pink"
            android:gravity="center"
            android:text="@string/preview_btn"
            android:textColor="@color/rice"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/photo_area"
            app:layout_constraintBottom_toTopOf="@+id/publish_btn"
            app:layout_constraintEnd_toEndOf="@+id/photo_area"
            app:layout_constraintStart_toStartOf="@+id/photo_area" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/publish_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/light_orange_pink"
            android:gravity="center"
            android:text="@string/publish_btn"
            android:textColor="@color/rice"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/preview_btn"
            app:layout_constraintEnd_toEndOf="@+id/preview_btn"
            app:layout_constraintStart_toStartOf="@+id/preview_btn"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>