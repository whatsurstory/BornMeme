<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/gSignInBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/salad_cat"
        app:lottie_speed="0.9" />

    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/arista_pro_bold_trial"
        android:gravity="center"
        android:text="BornMeme."
        android:textColor="@color/dark_blue"
        android:textSize="48sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/gSignInBtn"
        app:layout_constraintEnd_toEndOf="@+id/gSignInBtn"
        app:layout_constraintStart_toStartOf="@+id/gSignInBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gSignInBtn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:text="Google Sign In"
        android:textColor="@color/dark_blue"
        android:textSize="24sp"
        android:fontFamily="@font/arista_pro_light_trial"
        app:backgroundTint="@color/white"
        app:icon="@drawable/icons8_google_48___"
        app:iconGravity="textStart"
        android:textStyle="bold"
        app:iconPadding="16dp"
        app:iconSize="28dp"
        app:iconTint="@null"
        android:visibility="visible"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/login_loading"
        android:layout_height="100dp"
        android:layout_width="160dp"
        app:lottie_autoPlay="true"
        android:visibility="invisible"
        app:lottie_loop="true"
        app:lottie_speed="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gSignInBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>