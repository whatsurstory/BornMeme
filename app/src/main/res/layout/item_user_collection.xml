<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/collection_img"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_margin="4dp"
        android:background="@drawable/place_holder"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedCorner_1" />

    <TextView
        android:id="@+id/collection_folder_name"
        style="@style/zh_bold_style"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/text_round_corner"
        android:gravity="center"
        android:textColor="@color/tr_pink"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/collection_img"
        app:layout_constraintEnd_toEndOf="@+id/collection_img"
        app:layout_constraintStart_toStartOf="@id/collection_img"
        app:layout_constraintTop_toTopOf="@+id/collection_img"
        tools:text="Folder Name" />

    <ImageButton
        android:id="@+id/delete_file_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="16dp"
        android:background="@drawable/delete"
        android:backgroundTint="@color/tr_pink"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>