<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/collection_img"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:alpha="0.9"
        android:scaleType="centerCrop"
        android:src="@drawable/dino"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedCorner" />

    <TextView
        android:id="@+id/collection_folder_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Folder Name"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/light_orange_pink"
        app:layout_constraintStart_toStartOf="@id/collection_img"
        app:layout_constraintEnd_toEndOf="@+id/collection_img"
        app:layout_constraintTop_toTopOf="@+id/collection_img"
        app:layout_constraintBottom_toBottomOf="@+id/collection_img"/>

</androidx.constraintlayout.widget.ConstraintLayout>