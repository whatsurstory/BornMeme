<?xml version="1.0" encoding="utf-8"?>
<resources>
        <style name="PreviewDialog">
            <item name="android:windowBackground">@color/translucent_80</item>
        </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_bg_style</item>
        <item name="android:textColor">@color/chip_fg_style</item>
        <item name="checkedIcon">@null</item>
        <item name="rippleColor">@color/rice</item>
    </style>

    <style name="CustomMenuStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/dark_blue</item>
        <item name="gapBetweenBars">8dp</item>
        <item name="barLength">24dp</item>
        <item name="thickness">2dp</item>
    </style>


    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
<!--        <item name="android:textSize">@dimen/textSizePrimary</item>-->
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/green</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/pinkpink</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/tian_ching</item>
    </style>

    <style name="PublishDialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2%</item>
    </style>

    <style name="SlideDialog">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>


<!-- setting the item in multiChoice list -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="colorAccent">@color/dark_blue</item>
    </style>


</resources>