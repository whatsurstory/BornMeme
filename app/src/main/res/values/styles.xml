<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PreviewDialog">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_bg_style</item>
        <item name="android:textColor">@color/chip_fg_style</item>
        <item name="checkedIcon">@null</item>
        <item name="rippleColor">@color/rice</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/round_border</item>
    </style>


    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/gray_white</item>

    </style>


    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Text Size -->
        <item name="android:textSize">16sp</item>
        <!-- Typing Query Text Color -->
        <item name="android:textColorPrimary">@color/dark_blue</item>
        <!-- display Hint Color -->
        <item name="android:textColorHint">@color/light_blue</item>
        <!-- Icon and close Color -->
        <item name="android:tint">@color/dark_blue</item>


    </style>

    <style name="PublishDialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedCorner_1" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">1%</item>
    </style>

    <style name="roundedCorner_4" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4%</item>
    </style>

    <style name="SlideDialog">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>


    <!-- setting the item in multiChoice list -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--   make dialog can't see     -->
        <!--        <item name="android:windowBackground">@android:color/transparent</item>-->
        <!--        <item name="android:windowContentOverlay">@null</item>-->
        <item name="android:textColor">@color/tr_black</item>
        <item name="colorAccent">@color/tr_black</item>
        <item name="fontFamily">@font/rounded_mplus_medium</item>
    </style>

    <!--    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">-->
    <!--        <item name="android:fontFamily">@font/yozai_medium</item>-->
    <!--    </style>-->

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/arista_pro_bold_trial</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.11</item>
    </style>

    <style name="eng_bold_font_style">
        <item name="fontFamily">@font/arista_pro_bold_trial</item>
        <item name="android:fontFamily">@font/arista_pro_bold_trial</item>
    </style>

    <style name="eng_font_style">
        <item name="fontFamily">@font/arista_pro_light_trial</item>
        <item name="android:fontFamily">@font/arista_pro_light_trial</item>
    </style>

    <style name="zh_bold_style">
        <item name="fontFamily">@font/round_border</item>
        <item name="android:fontFamily">@font/round_border</item>
    </style>

    <style name="zh_medium_style">
        <item name="fontFamily">@font/rounded_mplus_medium</item>
        <item name="android:fontFamily">@font/rounded_mplus_medium</item>
    </style>

    <style name="zh_light_style">
        <item name="fontFamily">@font/rounded_mplus_regular</item>
        <item name="android:fontFamily">@font/rounded_mplus_regular</item>
    </style>

</resources>